            <% if (dish.vouchers[i].voucherID == dish.highestVoucher) { %>
              <div class="item">
                <div class="item-right">
                  <p class="day">ID</p>
                  <h2 class="num"><%= dish.vouchers[i].voucherID %></h2>
                  <span class="up-border"></span>
                  <span class="down-border"></span>
