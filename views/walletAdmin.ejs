<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Page</title>
</head>
<style>
  body{
    margin: 0;
    background: #131315;
  }
nav{
  display: flex;
  width: 100vw;
  justify-content: space-between;
  background-color: black;
}

nav a 
{
  font-size: 45px;
  padding: 10px;
  background-color: black;
  border: 3px solid #c7fffb;
  border-radius: 3px;
  color:#c7fffb;
  text-decoration: none


}
.adminBtns
{
  display: flex;
  width: 100vw;
  position: sticky;
  justify-content: space-between;
  top: 0;
  background-color: black;
  margin-top: 10px;
}

button{
  margin: 6px;
  width: 300px;
  height: 30px;
  border-radius: 1rem;
  border:none;
  background-color: #50f8f3;
  color: #100e0e;
  font-weight: bold;
  cursor: pointer;
}

button:hover{
  background-color: #232020;
  color: #50f8f3;
  border: 2px solid #50f8f3;
  font-weight: bold;
  cursor: pointer;
  transition: 0.5s;
}
.adminBtns form
{
  display: grid;
  grid-template-columns: 2;
  
}

.display
{
  display: flex;
  justify-content: center;
}
.output
{
  width:1800px;
  height:1000px;
  display: flex;
  flex-direction: row;
}


.hodafone
{
  margin-left: 90%;
  color:#c7fffb;
}
.benefitsContainer{
        display: flex;
        width: 100%;
        flex-direction: column;
        align-items:stretch;
        color: white;
        margin-left: 10%;
        margin-right: 10%;
        margin-top: 2%;
        margin-bottom: 2%;
    }

    .benefitBox
    {
        display: flex;
        flex-direction: row;
        margin-bottom: 30px;
        font-size: 20px;
        justify-content: space-around;
        border:  3px solid #c7fffb ;
        text-align: center;
        border-radius: 25px;
        padding: 20px;
    }
    p{
      font-size : 24px
    }

    .benefitBox h2{
        padding-bottom: 10px;
    }
</style>
<body>
  <h2 class="hodafone">7odafone</h2>
  <nav>
    <a href="/eshops" class=" nav-elem">E-Shops</a>
    <a href="/pshops" class=" nav-elem">Physical Stores</a>
    <a href="/accountAdmin" class=" nav-elem">Accounts</a>
    <a href="/profileAdmin" class=" nav-elem">Profiles</a>
    <a href="/walletAdmin" class=" nav-elem active">Wallets</a>
    <a href="/paymentAdmin" class=" nav-elem">Payments</a>
    <a href="/ticketAdmin" class=" nav-elem">Tickets</a>
  </nav>
  <div class="display">
    <div class="output">
        <div class="benefitsContainer">
          <% for( let i = 0; i < dish.customerWallet.length; i++ ) { %>
              <% for( let j = 0; j < dish.numCashback.length; j++ ) { %>
                 <% if (dish.customerWallet[i].walletID == dish.numCashback[j].walletID) { %>
                  <div class = 'benefitBox'>
                    <div>
                      <p style = 'color : #0f840d'> walletID : <%= dish.customerWallet[i].walletID %></p>
                      <p> current_balance : <%= dish.customerWallet[i].current_balance %></p>
                      <p> currency : <%= dish.customerWallet[i].currency %> </p>
                      <p> last_modified_date : <%= dish.customerWallet[i].last_modified_date.toUTCString().slice(0,16) %></p>
                      <p> Number of Cashbacks : <%= dish.numCashback[j]['count of transactions'] %></p> 
                      <p> nationalID : <%= dish.customerWallet[i].nationalID %></p> 
                      <p> mobileNo : <%= dish.customerWallet[i].mobileNo %> </p>
                      <p> first_name : <%= dish.customerWallet[i].first_name %></p>
                      <p> last_name : <%= dish.customerWallet[i].last_name %></p>
                    </div>
                    </div>  
                 <% } %>
              <% } %>
          <% } %>
        </div>
      </div>
    </div>

  </div>
  
  
</body>
</html>