        <button id="flipButtonBack" class="active">Recharge Balance</button>
        <button id="flipButton">Renew Plan</button>
      </div>
      <div class="flip-card-inner">
        <div class="flip-card-back">
            <form method ='post' class="first">
              <label class="headers" for="Amount">Renew Plan</label>
                  <div class="input-container"> 
                    <label for="name">Amount:</label>
                    <input class="inputs" placeholder="Amount" type="number" name="amount" id="plann" required>
                  </div>
                  
                  <div class="input-container"> 
                    <label for="name">Plan ID:</label>
                    <input class="inputs" placeholder="Plan" type="number" name="plan" id="plann" required>                
                  </div>
                  <div class="input-container"> 
                  <label for="Payment Method">Payment Method:</label>
                    <select class="inputs" name="method" class="inputs" required>
                        <option value="Cash">Cash</option>
                        <option value="Credit">Credit</option>
                    </select>
                  </div>
                  <button  name='action'  value = 'renew' type="submit">Renew Plan</button>
                  </form>
        </div>
    
        <div class="flip-card-front">
          <form class="help" method = 'post'>
            <label class="headers" for="Amount">Recharge Balance </label>
            <div class="input-container"> 
              <label for="Amount">Amount:</label>
              <input class="inputs" placeholder="Amount" type="number" name="amount" id="plann" required>
              <label class="marg" for="Payment Method">Payment Method:</label>
              <select name="method" class="inputs">
                  <option value="Cash">Cash</option>
                  <option value="Credit">Credit</option>
              </select>
            </div>
            <button type="submit" name="action" value="recharge">Recharge Balance</button>

      </form>
       
          <form method = "post">
            <label class="headers" for="Amount">Remaining/Extra Amounts</label>
            <div class="input-container"> 
            <label for="name">Plan Name:</label>
            <input class="inputs" type="text" placeholder="Plan Name" id="number" name="planname" required>
          </div>
            <button type="submit"  name="action" value="showDetails">Show</button>
            <div class="row">
            <% if (success == 2 && rem != null && extra != null) { %>
              <div class="inputs"> Remaining: <%= rem %></div>
              <div class="inputs"> Extra: <%= extra %></div>
            <% } %>
          </div>
          </form>
  
    
        </div>
    
      </div>
    
    </div> 

  </div>

     

      <% if (success > 2) { %>
        <div id="successModal" class="modal">
         <div class="modal-content">
             <span class="close">&times;</span>
             <% if (success == 4) { %>
                 <p id="errorMessage">Balance recharged succcesfully</p>
             <% } %>
             <% if (success == 3) { %>
                 <p id="errorMessage">It appears an error has taken place</p>
             <% } %>  <!-- Display error message -->
         </div>
     </div>
       <% } %>
        <% if (success < 2) { %>
            <div id="successModal" class="modal">
             <div class="modal-content">
                 <span class="close">&times;</span>
                 <% if (success == 1) { %>
                     <p id="errorMessage">Payment completed successfully</p>
                 <% } %>
                 <% if (success == 0) { %>
                     <p id="errorMessage">It appears an error has taken place</p>
                 <% } %>  <!-- Display error message -->
             </div>
         </div>
           <% } %>
      </div>
 
      
      <script>

document.getElementById('flipButton').addEventListener('click', function() {

document.getElementById('card').classList.add('flipped');
document.getElementById('flipButton').classList.add('active');
document.getElementById('flipButtonBack').classList.remove('active');


});

document.getElementById('flipButtonBack').addEventListener('click', function() {

document.getElementById('card').classList.remove('flipped');
document.getElementById('flipButtonBack').classList.add('active');
document.getElementById('flipButton').classList.remove('active');

});




        const success =  '<%= success || "" %>';
        var span = document.getElementsByClassName("close")[0];
         

             span.onclick = function() {
             var modal = document.getElementById("successModal");
             modal.style.display = "none";
         }
      
         window.onclick = function(event) {
             var modal = document.getElementById("successModal");
             if (event.target == modal) {
                 modal.style.display = "none";
             }
         }
         
         

      </script>
        
    
