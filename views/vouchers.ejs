                  <span class="up-border"></span>
                  <span class="down-border"></span>
                </div> <!-- end item-right -->
                
                <div class="item-left">
                  <p class="event">Voucher</p>
                  <h2 class="title">Value: <%= dish.vouchers[i].value %></h2>
                  
                  <div class="sce">
                    <div class="icon">
                      <i class="fa fa-table"></i>
                    </div>
                    <p>Expiry Date: <%= dish.vouchers[i].expiry_date.toUTCString().slice(0,16) %></p>
                  </div>
                  <div class="fix"></div>
                  <div class="loc">
                    <div class="icon">
                      <i class="fa fa-map-marker"></i>
                    </div>
                  </div>
                  <div class="fix"></div>
                  <form method = 'post'>
                    <button class="button-89" name='action'  value = '<%=  dish.vouchers[i].voucherID %>' type = 'submit' role="button">Redeem</button>
